<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#757575"
    android:padding="2dp"
    tools:context="nazibulhasanraju.smart_lock.ControllerActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Smart Lock System"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/locked_icon"
        android:layout_gravity="center"
        android:id="@+id/lock_state_img" />

    <TextView
        android:id="@+id/lock_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FAFAFA"
        android:text="Lock State: LOCKED"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ToggleButton
            android:id="@+id/toggleLight1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textOn="Light 1 ON"
            android:textOff="Light 1 OFF"/>

        <ToggleButton
            android:id="@+id/toggleLight2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textOn="Light 2 On"
            android:textOff="Light 2 Off"/>

        <ToggleButton
            android:id="@+id/toggleFan"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textOn="Fan On"
            android:textOff="Fan Off"
     />

    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleDoor"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:textOn="Door Open"
        android:textOff="Door Closed"/>


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Disconnect Bluetooth"
        android:textAlignment="center"/>
</LinearLayout>
